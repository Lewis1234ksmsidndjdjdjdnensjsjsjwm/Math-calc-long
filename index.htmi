<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CalcSolver - Free Online Scientific Calculator</title>
  <style>
    body { margin:0; font-family:Arial, sans-serif; background:#0d1117; color:#c9d1d9; height:100vh; overflow:hidden; }
    #container { display:flex; flex-direction:column; height:100%; }
    #header { background:#161b22; padding:15px; text-align:center; border-bottom:1px solid #30363d; }
    #header h1 { margin:0; font-size:28px; color:#58a6ff; }
    #calc-area { flex:1; display:flex; justify-content:center; align-items:center; background:#0d1117; }
    #calculator { background:#161b22; border:1px solid #30363d; border-radius:12px; padding:20px; width:360px; box-shadow:0 10px 30px rgba(0,0,0,0.6); }
    #display { width:100%; height:60px; font-size:32px; text-align:right; padding:10px; background:#0d1117; color:#f0f6fc; border:1px solid #30363d; border-radius:8px; margin-bottom:15px; box-sizing:border-box; }
    .buttons { display:grid; grid-template-columns:repeat(4,1fr); gap:10px; }
    button { height:60px; font-size:24px; border:none; border-radius:8px; cursor:pointer; transition:0.2s; }
    .num { background:#21262d; color:#c9d1d9; }
    .num:hover { background:#30363d; }
    .op { background:#30363d; color:#58a6ff; }
    .op:hover { background:#388bfd; color:#fff; }
    .clear { background:#da190b; color:white; grid-column:span 2; }
    .clear:hover { background:#f44336; }
    .equal { background:#238636; color:white; grid-column:span 2; }
    .equal:hover { background:#2ea043; }
    #games-container { position:absolute; top:0; left:0; width:100%; height:100%; background:#000; display:none; z-index:100; }
    iframe { width:100%; height:100%; border:none; }
    #code-input { margin:20px auto; display:block; padding:12px; font-size:18px; width:200px; text-align:center; background:#21262d; color:#c9d1d9; border:1px solid #30363d; border-radius:8px; }
    #submit-code { padding:12px 24px; font-size:18px; background:#238636; color:white; border:none; border-radius:8px; cursor:pointer; }
    #submit-code:hover { background:#2ea043; }
  </style>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1>CalcSolver</h1>
    </div>
    <div id="calc-area">
      <div id="calculator">
        <input type="text" id="display" readonly value="0">
        <div class="buttons">
          <button class="clear" onclick="clearDisplay()">C</button>
          <button class="op" onclick="appendToDisplay('/')">/</button>
          <button class="num" onclick="appendToDisplay('7')">7</button>
          <button class="num" onclick="appendToDisplay('8')">8</button>
          <button class="num" onclick="appendToDisplay('9')">9</button>
          <button class="op" onclick="appendToDisplay('*')">*</button>
          <button class="num" onclick="appendToDisplay('4')">4</button>
          <button class="num" onclick="appendToDisplay('5')">5</button>
          <button class="num" onclick="appendToDisplay('6')">6</button>
          <button class="op" onclick="appendToDisplay('-')">-</button>
          <button class="num" onclick="appendToDisplay('1')">1</button>
          <button class="num" onclick="appendToDisplay('2')">2</button>
          <button class="num" onclick="appendToDisplay('3')">3</button>
          <button class="op" onclick="appendToDisplay('+')">+</button>
          <button class="num" onclick="appendToDisplay('0')">0</button>
          <button class="num" onclick="appendToDisplay('.')">.</button>
          <button class="equal" onclick="calculate()">=</button>
        </div>
      </div>
    </div>
  </div>

  <div id="games-container">
    <input type="text" id="code-input" placeholder="Enter Code">
    <button id="submit-code" onclick="loadGame()">Submit</button>
    <iframe id="game-frame" src="" allowfullscreen></iframe>
  </div>

  <script>
    let display = document.getElementById('display');

    function appendToDisplay(value) {
      if (display.value === '0' && value !== '.') {
        display.value = value;
      } else {
        display.value += value;
      }
    }

    function clearDisplay() {
      display.value = '0';
    }

    function calculate() {
      try {
        let val = display.value.trim();
        if (/^\d{4}$/.test(val)) {
          loadGameByCode(val);
          return;
        }
        display.value = eval(display.value) || '0';
      } catch (e) {
        display.value = 'Error';
      }
    }

    function loadGameByCode(code) {
      const games = {
        '1002': 'https://1v1.lol/',
        '1003': 'https://run3.io/',
        '1007': 'https://retro-bowl.github.io/',
        '1010': 'https://slope-game.github.io/'
      };
      let url = games[code] || 'https://slope-game.github.io/';
      document.getElementById('games-container').style.display = 'block';
      document.getElementById('game-frame').src = url;
      document.getElementById('container').style.display = 'none';
    }

    function loadGame() {
      let code = document.getElementById('code-input').value.trim();
      if (code) loadGameByCode(code);
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        document.getElementById('games-container').style.display = 'none';
        document.getElementById('container').style.display = 'flex';
        document.getElementById('game-frame').src = '';
      }
    });
  </script>
</body>
</html>
